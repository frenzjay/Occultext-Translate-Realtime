{
  "manifest_version": 2,
  "name": "Occultext Translate Realtime",
  "version": "2.0",
  "permissions": ["activeTab", "webRequest", "https://*.facebook.com/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle" 
    }
  ]
}
